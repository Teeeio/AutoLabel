{
  "name": "desktop",
  "private": true,
  "version": "0.0.0",
  "description": "Random Dance Generator - Desktop Application",
  "author": "Your Name",
  "main": "src/main/index.cjs",
  "scripts": {
    "dev": "powershell -Command \"$env:VITE_DEV_SERVER_URL = if ($env:VITE_DEV_SERVER_URL) { $env:VITE_DEV_SERVER_URL } else { 'http://localhost:5173' }; npx electron .\"",
    "build": "electron-builder"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.3.0",
    "ffprobe-static": "^3.1.0"
  },
  "devDependencies": {
    "electron": "30.0.0",
    "electron-builder": "^24.13.0"
  },
  "build": {
    "appId": "com.randomdance.generator",
    "productName": "Random Dance Generator",
    "files": [
      "src/main/**/*",
      "src/server/**/*",
      "dist/**/*"
    ],
    "directories": {
      "output": "../../dist/desktop"
    },
    "win": {
      "target": "nsis",
      "signAndEditExecutable": false,
      "signingHashAlgorithms": []
    }
  }
}
